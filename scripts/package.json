{
  "name": "documentation-manager-scripts",
  "version": "1.0.0",
  "description": "Documentation organization scripts and tests",
  "main": "documentationManager.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration.test.js",
    "test:unit": "jest --testPathPattern=test --testPathIgnorePatterns=integration.test.js",
    "test:all": "jest --coverage --verbose"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "inquirer": "^8.2.6",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!test/**"
    ],
    "transform": {},
    "testTimeout": 30000
  }
}
{
  "name": "curva-mestra-system-backend",
  "version": "1.0.0",
  "description": "Curva Mestra System - Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:production": "NODE_ENV=production node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "echo 'Backend build completed'",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "migrate": "node src/utils/migrate.js up",
    "migrate:rollback": "node src/utils/migrate.js down",
    "seed": "node src/utils/seed.js up",
    "seed:rollback": "node src/utils/seed.js down",
    "db:setup": "npm run migrate && npm run seed",
    "db:reset": "npm run migrate:rollback && npm run migrate && npm run seed",
    "backup:db": "node scripts/backup-database.js",
    "restore:db": "node scripts/restore-database.js",
    "firestore:setup": "node scripts/setup-firestore.js",
    "firestore:migrate": "node scripts/migrate-to-firestore.js",
    "firestore:test-rules": "node scripts/test-firestore-rules-simple.js",
    "migration:check": "node scripts/pre-migration-check.js",
    "migration:execute": "node scripts/production-migration.js migrate",
    "migration:validate": "node scripts/post-migration-validation.js",
    "migration:rollback": "node scripts/production-migration.js rollback --confirm",
    "migration:status": "node scripts/production-migration.js status"
  },
  "keywords": [
    "inventory",
    "clinic",
    "management",
    "healthcare"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.9",
    "pdfkit": "^0.14.0",
    "pg": "^8.11.3",
    "sequelize": "^6.35.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.4",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}

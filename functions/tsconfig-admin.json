{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": [
    "src/index.ts",
    "src/admin/**/*"
  ],
  "exclude": [
    "src/monitoring/**/*",
    "src/test/**/*",
    "src/index-admin-only.ts"
  ]
}
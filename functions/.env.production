# Production Environment Variables for Firebase Functions
# These will be set as Firebase Functions config

# Firebase Configuration
FIREBASE_PROJECT_ID=curva-mestra
FIREBASE_REGION=us-central1

# Database Configuration (Firestore)
FIRESTORE_EMULATOR_HOST=
FIREBASE_AUTH_EMULATOR_HOST=

# Email Configuration for notifications
EMAIL_SERVICE_ENABLED=true
EMAIL_FROM=noreply@curva-mestra.firebaseapp.com

# Monitoring Configuration
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true
ENABLE_ANALYTICS=true

# Security Configuration
CORS_ORIGINS=https://curva-mestra.web.app,https://curva-mestra.firebaseapp.com
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Logging Configuration
LOG_LEVEL=warn
ENABLE_DEBUG_LOGS=false

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_OFFLINE_SUPPORT=true

# Performance Configuration
FUNCTION_TIMEOUT=60
FUNCTION_MEMORY=256MB
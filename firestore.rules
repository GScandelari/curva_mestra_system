rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Função helper para verificar autenticação e status ativo
    function isAuthenticated() {
      return request.auth != null && request.auth.token.active == true;
    }

    // Função helper para verificar system_admin
    function isSystemAdmin() {
      return isAuthenticated() && request.auth.token.is_system_admin == true;
    }

    // Função helper para verificar tenant_id
    function belongsToTenant(tenantId) {
      return isAuthenticated() && request.auth.token.tenant_id == tenantId;
    }

    // Função helper para verificar role
    function hasRole(role) {
      return isAuthenticated() && request.auth.token.role == role;
    }

    // Função helper para verificar consultor
    function isConsultant() {
      return isAuthenticated() && request.auth.token.is_consultant == true;
    }

    // Função helper para verificar se consultor tem acesso ao tenant
    function consultantHasAccess(tenantId) {
      return isConsultant() && tenantId in request.auth.token.authorized_tenants;
    }

    // REGRAS MULTI-TENANT - OBRIGATÓRIO

    // Documento raiz do tenant (necessário para update durante onboarding)
    match /tenants/{tenantId} {
      // System admins têm acesso total
      allow read, write: if isSystemAdmin();

      // Usuários do tenant podem ler e atualizar seu próprio tenant
      allow read, update: if belongsToTenant(tenantId);

      // Consultores podem ler dados do tenant (read-only)
      allow read: if consultantHasAccess(tenantId);
    }

    // Subcoleções do tenant
    match /tenants/{tenantId}/{document=**} {
      // System admins têm acesso total
      allow read, write: if isSystemAdmin();

      // Usuários do tenant têm acesso apenas aos seus dados
      allow read, write: if belongsToTenant(tenantId);

      // Consultores têm acesso READ-ONLY às subcoleções
      allow read: if consultantHasAccess(tenantId);
    }

    // Regras específicas para notificações (dentro de tenants)
    match /tenants/{tenantId}/notifications/{notificationId} {
      // System admins têm acesso total
      allow read, write: if isSystemAdmin();

      // Usuários do tenant podem ler e atualizar (marcar como lida) suas notificações
      allow read, update: if belongsToTenant(tenantId);

      // Apenas admins do tenant podem criar e deletar notificações
      allow create, delete: if belongsToTenant(tenantId) && request.auth.token.role == 'clinic_admin';
    }

    // Regras específicas para configurações de notificações (dentro de tenants)
    match /tenants/{tenantId}/settings/notifications {
      // System admins têm acesso total
      allow read, write: if isSystemAdmin();

      // Usuários do tenant podem ler as configurações
      allow read: if belongsToTenant(tenantId);

      // Apenas admins do tenant podem alterar configurações
      allow write: if belongsToTenant(tenantId) && request.auth.token.role == 'clinic_admin';
    }

    // Coleção de solicitações de acesso (registro público)
    match /access_requests/{requestId} {
      // Qualquer pessoa pode criar uma solicitação (público ou autenticado)
      allow create: if true;

      // Apenas system_admin pode ler, atualizar e deletar
      allow read, update, delete: if isSystemAdmin();
    }

    // Coleção de usuários do sistema
    match /users/{userId} {
      // System admins têm acesso total
      allow read, write: if isSystemAdmin();

      // Usuários podem ler seu próprio documento
      allow read: if isAuthenticated() && request.auth.uid == userId;

      // Clinic_admin pode listar usuários do seu tenant
      // A query deve ter where("tenant_id", "==", <seu_tenant_id>)
      allow list: if isAuthenticated()
        && request.auth.token.role == 'clinic_admin'
        && request.auth.token.tenant_id != null;
    }

    // Coleção de produtos master Rennova (global, sem tenant)
    match /master_products/{productId} {
      allow read: if isAuthenticated();
      allow write: if isSystemAdmin();
    }

    // Coleção de produtos master (apenas system_admin pode escrever)
    match /produtos_master/{productId} {
      allow read: if isAuthenticated();
      allow write: if isSystemAdmin();
    }

    // Coleção de produtos Rennova (apenas system_admin pode escrever)
    match /products/{productId} {
      allow read: if isAuthenticated();
      allow write: if isSystemAdmin();
    }

    // Coleção de licenças
    match /licenses/{licenseId} {
      // System admins têm acesso total
      allow read, write: if isSystemAdmin();

      // Usuários podem ler suas próprias licenças
      allow read: if isAuthenticated() && resource.data.tenant_id == request.auth.token.tenant_id;

      // Clinic_admin pode criar licença para seu próprio tenant durante onboarding
      allow create: if isAuthenticated()
        && request.auth.token.role == 'clinic_admin'
        && request.resource.data.tenant_id == request.auth.token.tenant_id;

      // Clinic_admin pode atualizar licença do seu próprio tenant
      allow update: if isAuthenticated()
        && request.auth.token.role == 'clinic_admin'
        && resource.data.tenant_id == request.auth.token.tenant_id
        && request.resource.data.tenant_id == request.auth.token.tenant_id;
    }

    // Coleção de onboarding de tenants
    match /tenant_onboarding/{tenantId} {
      // System admins têm acesso total
      allow read, write: if isSystemAdmin();

      // Usuários do tenant podem ler, criar e atualizar seu próprio onboarding
      // Precisa de create porque o documento pode não existir ainda
      allow read, create, update: if belongsToTenant(tenantId);
    }

    // Coleção de fila de e-mails (apenas para uso interno das Cloud Functions)
    match /email_queue/{emailId} {
      // Apenas system_admin pode ler a fila de e-mails
      allow read: if isSystemAdmin();

      // Nenhum usuário pode escrever diretamente (apenas via API/Functions)
      allow write: if false;
    }

    // Coleção de tokens de reset de senha (apenas Admin SDK)
    // NUNCA acessada diretamente pelo cliente - apenas via API routes
    match /password_reset_tokens/{tokenId} {
      allow read, write: if false;
    }

    // Coleção de documentos legais (termos, políticas, etc.)
    match /legal_documents/{documentId} {
      // Qualquer usuário autenticado pode ler documentos ativos
      allow read: if isAuthenticated();

      // Apenas system_admin pode criar, atualizar e deletar
      allow write: if isSystemAdmin();
    }

    // Coleção de aceitações de documentos pelos usuários
    match /user_document_acceptances/{acceptanceId} {
      // System admins podem ler todas as aceitações
      allow read: if isSystemAdmin();

      // Usuários podem ler suas próprias aceitações
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;

      // Usuários podem criar suas próprias aceitações
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;

      // Ninguém pode atualizar ou deletar aceitações (auditoria)
      allow update, delete: if false;
    }

    // Configurações globais do sistema
    match /system_settings/{settingId} {
      // Qualquer usuário autenticado pode ler as configurações
      allow read: if isAuthenticated();

      // Apenas system_admin pode alterar configurações
      allow write: if isSystemAdmin();
    }

    // Métodos de pagamento
    match /payment_methods/{methodId} {
      // System admins têm acesso total
      allow read, write: if isSystemAdmin();

      // Usuários podem ler e escrever métodos de pagamento do seu tenant
      allow read, write: if isAuthenticated()
        && resource.data.tenant_id == request.auth.token.tenant_id;

      // Permitir criar novo método de pagamento para o próprio tenant
      allow create: if isAuthenticated()
        && request.resource.data.tenant_id == request.auth.token.tenant_id;
    }

    // Histórico de pagamentos
    match /payment_history/{historyId} {
      // System admins têm acesso total
      allow read, write: if isSystemAdmin();

      // Usuários podem ler histórico do seu tenant
      allow read: if isAuthenticated()
        && resource.data.tenant_id == request.auth.token.tenant_id;

      // Apenas system_admin ou Cloud Functions podem criar histórico
      // (via Admin SDK, sem passar pelas regras)
      allow write: if isSystemAdmin();
    }

    // Coleção de consultores
    match /consultants/{consultantId} {
      // System admins têm acesso total
      allow read, write: if isSystemAdmin();

      // Consultor pode ler seu próprio perfil
      allow read: if isConsultant() && request.auth.token.consultant_id == consultantId;

      // Usuários autenticados podem buscar consultores por código (para transferência)
      allow read: if isAuthenticated();
    }

    // Coleção de reivindicações de vínculo consultor-clínica
    match /consultant_claims/{claimId} {
      // System admins têm acesso total
      allow read, write: if isSystemAdmin();

      // Consultor pode criar reivindicação
      allow create: if isConsultant();

      // Consultor pode ler suas próprias reivindicações
      allow read: if isConsultant() && resource.data.consultant_id == request.auth.token.consultant_id;

      // Clinic_admin pode ler e atualizar reivindicações para seu tenant
      allow read, update: if belongsToTenant(resource.data.tenant_id) && hasRole('clinic_admin');
    }
  }
}

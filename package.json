{
  "name": "curva-mestra-system",
  "version": "1.0.0",
  "description": "Curva Mestra System - Sistema de Gestão de Inventário para Clínicas de Harmonização",
  "private": true,
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../functions && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:firebase": "firebase emulators:start",
    "build": "npm run build:frontend && npm run build:backend && npm run build:functions",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:functions": "cd functions && npm run build",
    "build:production": "NODE_ENV=production npm run build",
    "start:production": "cd backend && npm run start:production",
    "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\"",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm run test",
    "lint": "concurrently \"npm run lint:backend\" \"npm run lint:frontend\" \"npm run lint:functions\"",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:functions": "cd functions && npm run lint",
    "format": "concurrently \"npm run format:backend\" \"npm run format:frontend\"",
    "format:backend": "cd backend && npm run format",
    "format:frontend": "cd frontend && npm run format",
    "deploy:prepare": "npm run lint && npm run test && npm run build:production",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:hosting": "firebase deploy --only hosting",
    "firebase:deploy:functions": "firebase deploy --only functions",
    "firebase:deploy:firestore": "firebase deploy --only firestore"
  },
  "keywords": [
    "curva-mestra",
    "inventory",
    "clinic",
    "management",
    "healthcare",
    "harmonization"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "firebase-admin": "^13.5.0"
  }
}
